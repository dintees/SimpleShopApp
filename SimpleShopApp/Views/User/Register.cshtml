@model SimpleShopApp.Models.UserModel
@{
    ViewData["Title"] = "Register";
}

<h2>Register</h2>

<div class="row">
    <div class="col-md-5">
        <form method="post">
            <div class="form-group">
                <label asp-for="Username"></label>
                <input asp-for="Username" class="form-control" />
                <span class="text-danger" asp-validation-for="Username"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password"></label>
                <input type="password" asp-for="Password" class="form-control" />
                <span class="text-danger" asp-validation-for="Password"></span>
            </div>

            <div class="form-group">
                <label asp-for="Email"></label>
                <input type="email" asp-for="Email" class="form-control" />
                <span class="text-danger" asp-validation-for="Email"></span>
            </div>

            <input type="submit" class="btn btn-primary mt-2 mb-3" value="Register" />
        </form>
    </div>
</div>
@if (ViewBag.errorMessage != null)
{
    <div class="text-danger mt-2 mb-3">@ViewBag.errorMessage</div>
}
<a asp-action="Login">Do you already have an account? Sign in!</a>